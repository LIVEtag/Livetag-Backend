<IfModule mod_autoindex.c>
    # Disable Indexes
    Options -Indexes
    IndexIgnore */*
</IfModule>
<IfModule mod_rewrite.c>
    Options +FollowSymlinks
    RewriteEngine On

    # Backend
    RewriteRule ^backend/?(.*)$ /backend/web/$1 [L]

    # API
    RewriteRule ^rest/?(.*)$ /rest/web/$1 [L]

    # Frontend
    RewriteRule ^/?(.*)$ /frontend/web/$1 [L]
</IfModule>
