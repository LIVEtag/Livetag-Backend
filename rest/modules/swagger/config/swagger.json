{
    "swagger": "2.0",
    "info": {
        "description": "API for mobile && js applications.",
        "version": "1.0.0",
        "title": "GBKSOFT Test API"
    },
    "basePath": "/v1",
    "schemes": ["http", "https"],
    "paths": {
        "/access-tokens": {
            "post": {
                "summary": "Create access token for APP",
                "tags": ["access-token"],
                "produces": ["application/json", "application/xml"],
                "operationId": "userCreateAccessToken",
                "parameters": [
                    {
                        "in": "formData",
                        "name": "username",
                        "type": "string",
                        "required": true,
                        "description": "Minimum 2, maximum 255 characters"
                    },
                    {
                        "in": "formData",
                        "name": "password",
                        "type": "string",
                        "required": true,
                        "description": "Minimum 2, maximum 255 characters"
                    }
                ],
                "responses": {
                    "201": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/201Token"
                        }
                    },
                    "422": {
                        "description": "Data Validation Failed.",
                        "schema": {
                            "$ref": "#/definitions/ErrorModel"
                        }
                    }
                }
            }
        },
        "/users": {
            "post": {
                "summary": "Create user for APP",
                "tags": ["user"],
                "produces": ["application/json", "application/xml"],
                "operationId": "userCreate",
                "parameters": [
                    {
                        "in": "formData",
                        "name": "username",
                        "type": "string",
                        "required": true,
                        "description": "Minimum 2, maximum 255 characters"
                    },
                    {
                        "in": "formData",
                        "name": "email",
                        "type": "string",
                        "required": true,
                        "description": "Minimum 2, maximum 255 characters"
                    },
                    {
                        "in": "formData",
                        "name": "password",
                        "type": "string",
                        "required": true,
                        "description": "Minimum 2, maximum 255 characters"
                    }
                ],
                "responses": {
                    "201": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    },
                    "422": {
                        "description": "Data Validation Failed.",
                        "schema": {
                            "$ref": "#/definitions/ErrorModel"
                        }
                    }
                }
            }
        },
        "/users/current": {
            "get": {
                "summary": "Current user for APP",
                "tags": ["user"],
                "produces": ["application/json", "application/xml"],
                "operationId": "userCurrent",
                "parameters": [],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        }
    },
    "definitions": {
        "User": {
            "type": "object",
            "required": [
                "username",
                "email",
                "accessToken"
            ],
            "properties": {
                "username": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "accessToken": {
                    "schema": {
                        "$ref": "#/definitions/Token"
                    }
                }
            }
        },
        "201Token": {
            "type": "object",
            "required": [
                "code",
                "status",
                "result"
            ],
            "properties": {
                "code": {
                    "type": "integer",
                    "format": "int32"
                },
                "status": {
                    "type": "string"
                },
                "result": {
                    "schema": {
                        "$ref": "#/definitions/Token"
                    }
                }
            }
        },
        "Token": {
            "type": "object",
            "required": [
                "token",
                "expired_at"
            ],
            "properties": {
                "token": {
                    "type": "string"
                },
                "expired_at": {
                    "type": "integer",
                    "format": "int32"
                }
            }
        },
        "ErrorModel": {
            "type": "object",
            "required": [
                "code",
                "status",
                "result"
            ],
            "properties": {
                "code": {
                    "type": "integer"
                },
                "status": {
                    "type": "string"
                },
                "result": {
                    "type": "array",
                    "items": {
                        "minimum": 1,
                        "type": "object",
                        "required": [
                            "field",
                            "message"
                        ],
                        "properties": {
                            "field": {
                                "type": "string"
                            },
                            "message": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    }
}
