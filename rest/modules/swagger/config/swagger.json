                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/responses/status422"
                                }
                            }
                        }
                    }
                }
            }
        },
