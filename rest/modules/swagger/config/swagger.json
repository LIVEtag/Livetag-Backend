{
    "swagger": "2.0",
    "info": {
        "description": "API for mobile && js applications.",
        "version": "1.0.0",
        "title": "GBKSOFT Test API"
    },
    "basePath": "/v1",
    "schemes": ["http", "https"],
    "paths": {
        "/access-tokens": {
            "post": {
                "summary": "Login for APP",
                "tags": ["access-token"],
                "produces": ["application/json", "application/xml"],
                "operationId": "userCreateAccessToken",
                "parameters": [
                    {
                        "in": "formData",
                        "name": "username",
                        "type": "string",
                        "required": true,
                        "description": "Minimum 2, maximum 255 characters"
                    },
                    {
                        "in": "formData",
                        "name": "password",
                        "type": "string",
                        "required": true,
                        "description": "Minimum 2, maximum 255 characters"
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Success",
                        "schema": {
                            "$ref": "#/definitions/Token"
                        }
                    },
                    "422": {
                        "description": "Invalid request data",
                        "schema": {
                            "$ref": "#/definitions/ErrorModel"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "Token": {
            "type": "object",
            "required": [
                "token",
                "expired_at"
            ],
            "properties": {
                "token": {
                    "type": "string"
                },
                "expired_at": {
                    "type": "integer",
                    "format": "int32"
                }
            }
        },
        "ErrorModel": {
            "type": "object",
            "required": [
                "code",
                "message",
                "fields"
            ],
            "properties": {
                "code": {
                    "type": "integer"
                },
                "message": {
                    "type": "string"
                },
                "fields": {
                    "schema": {
                        "$ref": "#definitions/ErrorFields"
                    }
                }
            }
        },
        "ErrorFields": {
            "type": "object",
            "required": ["field", "message"],
            "properties": {
                "field": {
                    "type": "string"
                },
                "message": {
                    "type": "string"
                }
            }
        }
    }
}
