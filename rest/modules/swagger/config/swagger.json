{
    "openapi": "3.0.0",
    "info": {
        "description": "API for mobile && js applications.",
        "version": "1.0.0",
        "title": "Livetag API"
    },
    "security": [
        {
            "Bearer": []
        }
    ],
    "servers": [
        {
            "url": "/rest"
        }
    ],
    "tags": [
        {
            "name": "AnyBody",
            "description": "Actions available without authentication"
        },
        {
            "name": "User",
            "description": "User authentication, manage and details"
        },
        {
            "name": "Vonage",
            "description": "Vonage sessions manage"
        }
