                                "schema": {
                                    "$ref": "#/components/responses/status422"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "tags": [
                    "Vonage"
                ],
                "summary": "Stop Session",
                "operationId": "stopStreamSession",
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "description": "streamSession id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "No Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "$ref": "#/components/responses/status204"
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/responses/status401"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Error",
