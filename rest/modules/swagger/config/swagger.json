        "/v1/stream-session": {
            "post": {
                "tags": [
                    "Vonage"
                ],
                "summary": "Create new Session for stream",
                "operationId": "streamSessionCreate",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "$ref": "#/components/responses/status200"
                                        },
                                        {
