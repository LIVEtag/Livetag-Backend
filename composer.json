{
    "name": "gbksoft/yii2-base",
    "type": "project",
    "license": "MIT",
    "minimum-stability": "stable",
    "require": {
        "php": "~5.6.0|~7.0.0",
        "yiisoft/yii2": ">=2.0.9",
        "yiisoft/yii2-bootstrap": "*",
        "yiisoft/yii2-swiftmailer": "*",
        "fxp/composer-asset-plugin": "~1.1.0",
        "gbksoft/shell-command-builder": "1.0.1",
        "yiisoft/yii2-authclient": "~2.1.0"
    },
    "require-dev": {
        "yiisoft/yii2-codeception": "*",
        "yiisoft/yii2-debug": "*",
        "yiisoft/yii2-gii": "*",
        "yiisoft/yii2-faker": "*",
        "codeception/codeception": "2.0.*",
        "codeception/specify": "*",
        "codeception/verify": "*",
        "flow/jsonpath": "*",
        "andres-montanez/magallanes": "~1.0.1",
        "phpmd/phpmd" : "2.4.3",
        "sebastian/phpcpd": "2.0.4"
    },
    "autoload-dev": {
        "psr-4": {"tests\\lib\\": "tests/lib"}
    },
    "config": {
        "process-timeout": 1800
    },
    "extra": {
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    }
}
