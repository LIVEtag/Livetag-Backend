    "minimum-stability": "stable",
    "require": {
        "php": "~7.1.0",
        "yiisoft/yii2": "2.0.12",
        "yiisoft/yii2-bootstrap": "2.0.6",
        "yiisoft/yii2-swiftmailer": "2.0.7",
